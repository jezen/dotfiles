# Run this to obtain a new TLS fingerprint
# msmtp -a personal --tls-certcheck=off --tls-trust-file= --serverinfo

defaults
auth            on
protocol        smtp
tls             on

account         personal
user            jezen@jezenthomas.com
from            jezen@jezenthomas.com
passwordeval    gpg --use-agent --no-tty --decrypt ~/.mutt/personal_smtp.gpg
host            smtp.fastmail.com
port            465
tls_starttls    off
tls_fingerprint B1:6A:72:A2:D3:68:69:B7:10:4C:6B:88:99:67:D8:B5:8D:11:93:28:68:02:42:EA:5E:79:CE:68:DA:92:E4:1A

account zimpler
user            jezen@zimpler.com
from            jezen@zimpler.com
passwordeval    gpg --use-agent --no-tty --decrypt ~/.mutt/zimplerpw.gpg
host            smtp.gmail.com
port            587
tls_trust_file  ~/.mutt/Equifax_Secure_CA.cert
