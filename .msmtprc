defaults
auth            on
port            587
protocol        smtp
tls             on

account         personal
from            jezen@jezenthomas.com
host            mail.jezenthomas.com
passwordeval    gpg --use-agent --no-tty --decrypt ~/.mutt/personalpw.gpg

# As an alternative to tls_trust_file/tls_crl_file, you can use tls_fingerprint
# to pin a single certificate. You have to update the fingerprint when the
# server certificate changes, but an attacker cannot trick you into accepting
# a fraudulent certificate. Get the fingerprint with
# $ msmtp --serverinfo --tls --tls-certcheck=off --host=smtp.freemail.example
tls_fingerprint BE:B5:78:16:74:13:3F:BB:1E:00:B1:D4:6D:09:9C:5E:53:C4:B6:3C

user            jezen@jezenthomas.com

account zimpler
host            smtp.gmail.com
tls_trust_file  ~/.mutt/Equifax_Secure_CA.cert
from            jezen@zimpler.com
passwordeval    gpg --use-agent --no-tty --decrypt ~/.mutt/zimplerpw.gpg
user            jezen@zimpler.com
